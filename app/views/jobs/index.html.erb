<div class="project_list container">
  <ul class="list-unstyled">
    <% @jobs.each do |job| %>
    <li>
      <i data-toggle="modal" data-target="#mymodal-<%= job.id %>" type="button">
        <div class="project_type develop"><i class="icons"></i>
          <%= job.sort%>
          <i class="new">HOT</i>
        </div>
        <div class="project_main">
          <h3><%= job.title%></h3>
        <div class="price">
        <span class="range">
          ￥<%= job.wage_lower_bound%>-
            <%= job.wage_upper_bound %>
        </span>
        </div>
        <span class="fa fa-map-marker"></span>
          <%= job.CompanyLocation%>
        <div class="status">
          <span class="recruiting">招募中</span>
        </div>
        <div class="bottom_data">
        <div>
          <div class="title">已申请</div>
          <div class="txt">
            <strong><%= job.resumes.count %></strong>人
          </div>
        </div>
        <div>
          <div class="title">已推荐</div><div class="txt"><strong>4</strong>人</div>
        </div>
        <div>
          <div class="title">已浏览</div><div class="txt"><strong><%= job.viewed_count %></strong>人</div>
        </div>
        </div>
        <div class="time"><i class="icons icon-time"></i><div class="txt">发布时间：<%= relative_time(job.created_at) %></div>
        </div>
        </div>
        </i>
      </li>
      <!--
      <button class="btn btn-primary" data-toggle="modal" data-target="#mymodal-<%= job.id %>" type="button">通过data-target触发</button>
    -->
    <div class="modal fade bs-example-modal-lg" id="mymodal-<%= job.id %>" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <p>
              <br/>
            </p>
            <h2> <%= job.title %> </h2>
            <p class="info">
              <span class="salary">
                <span class="label label-default">
                  薪资范围：<%= job.wage_lower_bound %>
                </span>
                - <span class="label label-default">
                  <%= job.wage_upper_bound %>元
                </span>
              </span>
              /公司：<%= job.CompanyName %>/
              <span><span class="fa fa-map-marker"></span>
              <%= job.CompanyLocation %>
            </span>
            /<span><span class="fa fa-calendar"></span>
            发布时间：<%= relative_time(job.created_at) %>
          </span>
        </p>
      </div>
      <div class="modal-body">
        <div class="text-left">
          <%= simple_format(job.description) %>
        </div>
      </div>
      <div class="modal-footer">
        <div class="text-center">
          <a class="btn btn-lg btn-default" href=" <%= new_job_resume_path(job)%> ">
  <i class="fa fa-envelope fa-1x pull-left"></i> 提交简历</a>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>
